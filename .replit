[nix]
channel = "stable-24_05"

[workflows]
runButton = "Start Production"

[[workflows.workflow]]
name = "Development Setup"
author = 44947373
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "chmod +x scripts/setup.sh"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "./scripts/setup.sh"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install"

[[workflows.workflow]]
name = "Production Setup"
author = 44947373
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "chmod +x scripts/setup.sh"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "./scripts/setup.sh"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd frontend && npm install && npm run build"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd .."

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node server.js"

[[workflows.workflow]]
name = "Development"
author = 44947373
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd frontend && npm start"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"

[[workflows.workflow]]
name = "Production Deploy"
author = 44947373
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd frontend && npm install && npm run build"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd .."

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm test"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm start"

[[workflows.workflow]]
name = "Install Dependencies"
author = 44947373
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd frontend && npm install"

[[workflows.workflow]]
name = "Build Production"
author = 44947373
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd frontend && npm install && npm run build"

[[workflows.workflow]]
name = "Start Production"
author = 44947373
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm start"

[[workflows.workflow]]
name = "Clean Install"
author = 44947373
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "rm -rf node_modules package-lock.json"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "rm -rf frontend/node_modules frontend/package-lock.json"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd frontend && npm install"

[deployment]
run = ["sh", "-c", "npm start"]
build = ["sh", "-c", "./scripts/clean-deploy.sh"]
